<div class="row">
  <div class="col-md-4">
    <%= image_tag @garage.image_url %>
    <h2>
      <%= @garage.name %>
    </h2>
    <div class="star-rating" data-score= <%= @avg_rating %>></div>
    <p><%= "#{@reviews.count} ratings" %></p>
    <p>
      <strong>Address:</strong>
      <%= @garage.address %>
    </p>
    <p>
      <strong>Phone:</strong>
      <%= @garage.phone %>
    </p>
    <p>
      <strong>Website:</strong>
      <%= link_to @garage.website, @garage.website %>
    </p>

    <%= link_to "Write a Review", new_garage_review_path(@garage), class: "btn btn-primary" %>
    <%= link_to 'Edit', edit_garage_path(@garage) %> |
    <%= link_to 'Back', garages_path %>
  </div>
  <div class="col-md-8">
    <% if @reviews.any? %>
        <table class="table">
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td class="col-md-3">
                  <h4>
                    <%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize[0]}" %>
                  </h4>
                  <p>
                    <%= review.created_at.strftime("%d %b %Y") %>
                  </p>
                </td>
                <td class="col-md-9">
                  <div class="star-rating" data-score= <%= review.rating %>></div>
                  <p><%= h(review.comment).gsub(/\n/, '<br>').html_safe %></p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    <% else %>
      <h3>There are no reviews yet. Be the first to leave one!</h3>
    <% end %>
  </div>
</div>

<script>
  $('.star-rating').raty({
    path: 'https://s3-us-west-2.amazonaws.com/garage-review-images/raty-images',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>
