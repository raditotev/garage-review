<%= form_for(garage, html: { multipart: true }) do |f| %>
  <% if garage.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h2><%= pluralize(garage.errors.count, "error") %> prohibited this garage from being saved:</h2>
      <ul>
      <% garage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control", placeholder: "123 Example Rd, London, SW1 2BC" %>
  </div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control", type: "tel" %>
  </div>

  <div class="form-group">
    <%= f.label :website %>
    <%= f.text_field :website, class: "form-control", type: "url", placeholder: "http://" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control", type: "file" %>
  </div>


  <%= f.submit class: "btn btn-outline-primary btn-lg" %>

<% end %>
